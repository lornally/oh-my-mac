  },
  "python.languageServer": "Pylance", // 保持 Pylance，但确保不干扰 linting
  //"python.linting.lintOnSave": true, // 保存时运行 linting
  //"python.linting.pylintUseMinimalCheckers": false, // 使用完整 Pylint 检查
